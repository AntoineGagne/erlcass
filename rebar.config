{pre_hooks, [{"(linux|darwin)", compile, "make nif_compile CPP_DRIVER_REV=d5152deeeb188c1a1cb285233ffd98c6e9261e0c"}]}.
{post_hooks, [{"(linux|darwin)", clean, "make nif_clean"}]}.

{deps, [
    {lager, ".*", {git, "https://github.com/erlang-lager/lager.git", {tag, "3.4.2"}}}
]}.

{
    erl_opts,
    [
        warnings_as_errors ,
        warn_export_all,
        {parse_transform, lager_transform}
    ]
}.
